{
  "compilerOptions": {
    "target": "es6",
    "module": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "strictNullChecks": false,
    "outDir": "dist",
    "types": [
      "node"
    ],
    "typeRoots": [
      "./node_modules"
    ],
  }
}
